{
    "version": 2,
    "crons": [
        {
            "path": "/api/cron/sync_all",
            "schedule": "0 * * * *"
        }
    ],
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}